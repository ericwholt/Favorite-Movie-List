@model Favorite_Movie_List.ViewModel.FavoriteMovieVM
@using Favorite_Movie_List.Models

@{
    ViewBag.Title = "FavoriteList";
}

<h2>Favorites</h2>


<table class="table">
    <tr>
        <th>
            Movie Name
        </th>
        <th>
            Movie Poster
        </th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.FavoriteMovies.Count; i++)
    {
        FavoriteMovy favMovie = (FavoriteMovy)Model.FavoriteMovies[i];
        Movie movie = (Movie)Model.ListOfMovie[i];
        <tr>
            <td>
                @movie.Title
            </td>
            <td>
                <img src="@movie.Poster" alt="@movie.Title" />
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = favMovie.Id }) |
                @Html.ActionLink("Remove Favorite", "RemoveFavorite", new { id = favMovie.Id })
            </td>
        </tr>
    }
